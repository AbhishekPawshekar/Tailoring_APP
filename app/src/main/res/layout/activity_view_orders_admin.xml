<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_orders_admin">
    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_orange"
        android:layout_marginTop="90dp"></TextView>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!-- TODO: Update blank fragment layout -->
            <RelativeLayout
                android:id="@+id/alluserui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="FullName"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/dark_orange"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Phone"
                    android:layout_alignLeft="@+id/textView2"
                    android:textStyle="bold"
                    android:textColor="@color/dark_orange"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Category"
                    android:layout_alignLeft="@+id/textView4"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:text="Email-Id"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    android:layout_alignLeft="@+id/textView3"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:text="Type Of Cloth"
                    android:layout_alignLeft="@+id/textView5"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Stiching Price"
                    android:layout_alignLeft="@+id/textView6"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Advance Given"
                    android:layout_alignLeft="@+id/textView7"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Order Date"
                    android:layout_alignLeft="@+id/textView9"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Due Date"
                    android:layout_alignLeft="@+id/textView10"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Payment"
                    android:layout_alignLeft="@+id/textView11"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="12dp"
                    android:textColor="@color/dark_orange"
                    android:gravity="center"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerview_view_Completed_orders_admin"
                    android:layout_marginTop="40dp"
                    />
            </RelativeLayout>

        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>