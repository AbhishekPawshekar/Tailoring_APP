<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".female_dress">

    <include
        layout="@layout/toolbar" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/female_kurta"
                    app:layout_constraintBottom_toBottomOf="@+id/total_length_female_dress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/neck_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:layout_marginStart="188dp"
                    android:layout_marginLeft="188dp"
                    android:ems="10"

                    android:hint="Neck:"
                    android:textColor="@color/dark_orange"

                    android:textSize="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"

                    >

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/shoulder_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:layout_marginStart="132dp"
                    android:layout_marginLeft="132dp"

                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Shoulder Length:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintStart_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintTop_toTopOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/chest_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"

                    android:layout_marginStart="132dp"
                    android:layout_marginLeft="132dp"

                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Chest :"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintStart_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintTop_toTopOf="@+id/imageView">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/waist_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:layout_marginTop="192dp"
                    android:ems="10"
                    android:hint="Waist:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.624"
                    app:layout_constraintStart_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintTop_toTopOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bottom_width_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:layout_marginTop="276dp"
                    android:ems="10"
                    android:hint="Bottom width:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.902"
                    app:layout_constraintStart_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintTop_toTopOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/seat_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"

                    android:layout_marginTop="184dp"
                    android:ems="10"
                    android:hint="Seat:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintHorizontal_bias="0.216"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cuff_circumference_length_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"

                    android:layout_marginStart="116dp"
                    android:layout_marginLeft="116dp"
                    android:layout_marginTop="136dp"
                    android:ems="10"
                    android:hint="Cuff Circumference:"

                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintStart_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintTop_toTopOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sleeve_length_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="Sleeve Length:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/neck_female_dress"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neck_female_dress">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/total_length_female_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/personaldetailsregistration"
                    android:layout_alignTop="@+id/personaldetailsregistration"
                    android:ems="10"
                    android:hint="Total Length:"
                    android:textColor="@color/dark_orange"
                    android:textSize="10dp"
                    android:layout_marginTop="400dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BAFFFFFC"
                        android:gravity="center"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:textSize="10dp"
                        android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Dress"
                    android:textColor="@color/dark_orange"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/next_button_female_dress"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/total_length_female_dress"
                    android:layout_width="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>