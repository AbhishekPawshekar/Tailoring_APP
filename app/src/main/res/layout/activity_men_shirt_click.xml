<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".men_shirt_click">
<include layout="@layout/toolbar"/>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/male_shirt"
                app:layout_constraintBottom_toBottomOf="@+id/Total_length_men_shirt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sholder_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:ems="10"
        android:hint="Shoulder:"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/neck_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:ems="10"
        android:hint="Neck:"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/sholder_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chestmen_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Chest:"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/waist_men_shirt"
        app:layout_constraintStart_toEndOf="@+id/sholder_men_shirt"
        app:layout_constraintTop_toTopOf="@+id/neck_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/waist_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:ems="10"
        android:hint="Waist:"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toTopOf="@+id/sleeve_length_men_shirt"
        app:layout_constraintStart_toEndOf="@+id/sholder_men_shirt"
        app:layout_constraintTop_toTopOf="@+id/neck_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sleeve_length_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:ems="10"
        android:hint="Sleeve Length"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/sholder_men_shirt"
        app:layout_constraintTop_toTopOf="@+id/cuff_circumference_length_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seat_length_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="230dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Seat Length"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/cuff_circumference_length_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cuff_circumference_length_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="230dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Cuff Circumference "
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/bicep_men_shirt">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bicep_men_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personaldetailsregistration"
        android:layout_alignTop="@+id/personaldetailsregistration"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Bicep"
        android:textColor="@color/dark_orange"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BAFFFFFC"
            android:gravity="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="false"
            android:textSize="10dp"
            android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Total_length_men_shirt"
                android:layout_marginTop="400dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/personaldetailsregistration"
                android:layout_alignTop="@+id/personaldetailsregistration"
                android:ems="10"
                android:hint="Total Length"
                android:textColor="@color/dark_orange"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BAFFFFFC"
                    android:gravity="center"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:singleLine="false"
                    android:textSize="10dp"
                    android:textStyle="normal|italic"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Shirt"
                android:textColor="@color/dark_orange"
                android:textSize="20dp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/next_button_shirt"
                android:layout_height="wrap_content"
                android:text="Next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Total_length_men_shirt"
                android:layout_width="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>